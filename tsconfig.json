{
    "compilerOptions": {
      "noImplicitAny": false, // TODO: remove line once redux is removed and proper file types are added
      "target": "es6",
      "module": "esnext",
      "jsx": "react-jsx",
      "strict": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "paths": {
        "@src/*": ["./src/*"],
        
    }
    },
    "include": [
    "src", 
    "src/types/**/*.d.ts" 
    ],
    "exclude": ["node_modules"]
  }
  